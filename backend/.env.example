PORT=5000

# MongoDB Connection
# Option 1: Local MongoDB (default)
MONGODB_URI=mongodb://localhost:27017/shoe-store

# Option 2: MongoDB Atlas (cloud)
# Replace with your Atlas connection string from MongoDB Compass
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shoe-store?retryWrites=true&w=majority

# Security Keys (change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
ENCRYPTION_KEY=your-32-character-encryption-key-for-face-data

NODE_ENV=development
